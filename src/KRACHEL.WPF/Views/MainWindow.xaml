<Window x:Class="KRACHEL.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KRACHEL.WPF"
        xmlns:res="clr-namespace:KRACHEL.WPF.Resources"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Soubor">
                <MenuItem Name="Close" Header="{x:Static res:General.ElementClose}" Click="Close_Click"/>
            </MenuItem>
            <MenuItem Header="Nástroje">
                <MenuItem Name="VideoEditor" Header="{x:Static res:General.NameVideoEditor}" Click="VideoEditor_Click"/>
                <MenuItem Name="AudioExtractor"  Header="{x:Static res:General.NameAudioExtractor}" Click="AudioExtractor_Click"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
